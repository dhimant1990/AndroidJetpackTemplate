<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <FrameLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            style="@style/scrollbarStyleVertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbarDefaultDelayBeforeFade="1000"
            android:scrollbarFadeDuration="5000"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/item_movie">

        </android.support.v7.widget.RecyclerView>

        <eu.davidea.fastscroller.FastScroller
            android:id="@+id/fast_scroller"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:fastScrollerAutoHideDelayInMillis="1500"
            app:fastScrollerAutoHideEnabled="true"
            app:fastScrollerBubbleEnabled="true"
            app:fastScrollerBubblePosition="adjacent"
            app:fastScrollerHandleAlwaysVisible="false"
            app:fastScrollerIgnoreTouchesOutsideHandle="true"
            tools:visibility="visible" />

    </FrameLayout>

    <include layout="@layout/empty_view" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_100"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:progress="@integer/anim_duration_long"
        android:visibility="gone" />

</FrameLayout>